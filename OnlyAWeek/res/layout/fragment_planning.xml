<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/inner_padding"
    android:paddingTop="@dimen/defaultTopPadding" >
    
    <LinearLayout
        android:id="@+id/layoutCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/outter_padding"
        android:layout_marginTop="@dimen/inner_padding"
        android:gravity="right"
        android:orientation="horizontal" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutExamPlanningData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                style="@style/ValueHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paginas totales" />
        </LinearLayout>

        <TextView
            android:id="@+id/planning_total"
            style="@style/ValueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/inner_padding"
            android:text="123" />

        <View style="@style/Divider" />

        <TextView
            android:id="@+id/textView3"
            style="@style/ValueHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paginas restantes" />

        <TextView
            android:id="@+id/planning_remaining"
            style="@style/ValueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/valuePadding"
            android:text="52" />

        <View style="@style/Divider" />

        <TextView
            android:id="@+id/textView5"
            style="@style/ValueHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dias de repaso" />

        <EditText
            android:id="@+id/planning_revision"
            style="@android:style/Widget.Holo.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inner_padding"
            android:layout_marginRight="@dimen/outter_padding"
            android:inputType="number"
            android:paddingLeft="@dimen/valuePadding"
            android:text="3" />

        <View style="@style/Divider" />

        <TextView
            android:id="@+id/textView7"
            style="@style/ValueHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promedio" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/valuePadding" >

            <TextView
                android:id="@+id/planning_ratio"
                style="@style/ValueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 - 11" />
        </LinearLayout>

        <View style="@style/Divider" />

        <TextView
            android:id="@+id/planning_comment"
            style="@style/ValueHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/outter_padding"
            android:paddingTop="@dimen/inner_padding"
            android:text="Comentario" />

        <Button
            android:id="@+id/planning_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizar" />
    </LinearLayout>

</LinearLayout>

</ScrollView>