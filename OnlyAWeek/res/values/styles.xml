<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="ListItem">
        <item name="android:layout_marginTop">@dimen/outter_padding</item>
        <item name="android:layout_marginBottom">@dimen/outter_padding</item>
        <item name="android:layout_marginLeft">@dimen/inner_padding</item>
        <item name="android:layout_marginRight">@dimen/inner_padding</item> 
    </style>
    
    <style name="ColorItem">
        <item name="android:layout_marginLeft">@dimen/inner_padding</item>
        <item name="android:layout_marginRight">@dimen/inner_padding</item> 
    </style>
    
    <style name="ValueHeaderText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginLeft">@dimen/inner_padding</item>
        <!-- <item name="android:textColor">#6a6a6a</item-->
    </style>
    
    <style name="ValueText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginLeft">@dimen/inner_padding</item>
        <item name="android:textColor">#161616</item>
    </style>
    
    <style name="Divider" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/inner_padding</item>
        <item name="android:layout_marginBottom">@dimen/inner_padding</item>
        <item name="android:layout_marginRight">@dimen/inner_padding</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#252525</item>
    </style>

</resources>
